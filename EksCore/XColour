#ifndef XCOLOUR_H
#define XCOLOUR_H

#include "XGlobal"
#include "XVector4D"
#include "QColor"

typedef QColor XLDRColour;

XLDRColour operator*( const XLDRColour &, const XLDRColour & );
XLDRColour operator+( const XLDRColour &, const XLDRColour & );

XLDRColour operator*( xReal, const XLDRColour & );

class EKSCORE_EXPORT XColour : public XVector4D
    {
public:
    inline xReal r( ) const { return x(); }
    inline xReal g( ) const { return y(); }
    inline xReal b( ) const { return z(); }
    inline xReal a( ) const { return w(); }

    inline void setR( xReal in ) { setX( in ); }
    inline void setG( xReal in ) { setY( in ); }
    inline void setB( xReal in ) { setZ( in ); }
    inline void setA( xReal in ) { setW( in ); }

    XColour();
    XColour( float * );
    XColour( double * );
    XColour( xReal, xReal, xReal );
    XColour( xReal, xReal, xReal, xReal );
    XColour( const XVector4D & );
    XColour( const XLDRColour & );

    XLDRColour toLDRColour( ) const;
    };

#endif // XCOLOUR_H
