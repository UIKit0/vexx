<project>
    <shortName>synapse</shortName>
    <fullName>Synapse</fullName>
    <version>1.0.2</version>
    <readmeFile>README</readmeFile>
    <leftImage>alter/resources/icon.png</leftImage>
    <splashImage>alter/resources/calcSplash.png</splashImage>
    <preInstallationActionList>
        <registryDelete>
            <abortOnError>0</abortOnError>
            <key>HKEY_CURRENT_USER\Software\jorjSoftware</key>
            <name></name>
            <showMessageOnError>0</showMessageOnError>
        </registryDelete>
    </preInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Vexx</vendor>
    <componentList>
        <component>
            <name>synapse</name>
            <description>Synapse</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>The core synapse application</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Start compositing with Synapse</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>Synapse</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/alter.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/icon.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <excludeFiles>.svn</excludeFiles>
                            <origin>bin/plugins</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>alter/resources/icon.ico</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>bin/synapseNodes</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>bin/alter.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/alter.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/EksCore.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/EksGui.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/jLib.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>bin/README</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>qt.conf</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start Compositing with Synapse</comment>
                    <name>Synapse</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/alter.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/icon.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>QtDlls</name>
            <description>Qt Dlls</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>Install Qt and Mingw dlls specifically to the synapse installation directory, if not installed Qt 4.7 is assumed to be installed in the users $PATH.</detailedDescription>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/mingw/bin/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/mingw/bin/mingwm10.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtCored4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtGuid4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtNetworkd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtOpenGLd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtSvgd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/bin/QtXmld4.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>IconEngines</description>
                    <destination>${installdir}/plugins/iconengines/</destination>
                    <name>IconEngines</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/iconengines/qsvgicond4.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>ImageFormats</description>
                    <destination>${installdir}/plugins/imageformats</destination>
                    <name>ImageFormats</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qgifd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qicod4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qjpegd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qmngd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qsvgd4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../Qt/2010.05/qt/plugins/imageformats/qtiffd4.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

